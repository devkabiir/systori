{
    "editor.formatOnSave": true,
    "[typescript]": {
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": true,
            "source.organizeImports": true
        },
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "prettier.requireConfig": true,
    "prettier.eslintIntegration": false,
    "prettier.tslintIntegration": false,
    "eslint.enable": true,
    "eslint.alwaysShowStatus": true,
    "eslint.packageManager": "npm",
    "eslint.codeAction.disableRuleComment": {
        "enable": true,
        "location": "separateLine"
    },

    "eslint.validate": ["typescript", "javascript"],
    "eslint.codeAction.showDocumentation": {
        "enable": true
    },
    "typescript.tsdk": "./node_modules/typescript/lib",
    "jest.showCoverageOnLoad": true,
    "jest.pathToJest": "npm test --",
    "jest.enableCodeLens": true,
    "jest.coverageFormatter": "GutterFormatter",
    "jest.runAllTestsFirst": true,
    "jest.pathToConfig": "",
    "jest.autoEnable": true,
    "jest.debugCodeLens.showWhenTestStateIn": ["fail", "unknown"],
    "jest.enableInlineErrorMessages": true,
    "jest.enableSnapshotPreviews": true,
    "jest.enableSnapshotUpdateMessages": true,
    "jest.restartJestOnSnapshotUpdate": true
}
